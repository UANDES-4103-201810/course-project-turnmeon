<h4><b><%= promise.title %></b></h4>
<p><b>Cost: $<%= promise.cost %> USD</b></p>
<p align="justify"><%= promise.description %></p>
<a class="btn btn-primary m-1"  role="button">Buy this promise!</a>
<% if user_signed_in? %>
			<% if @idea.user_id == current_user.id or current_user.try(:admin?)%>
				<%= link_to "Edit", edit_idea_promise_path(promise.idea, promise), class: "btn btn-default" %>
				<%= link_to "Delete", idea_promise_path(promise.idea, promise), class: "btn btn-default" , method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
<% end %>
<hr>
