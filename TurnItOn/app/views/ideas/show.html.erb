<div class="row">
	<h1><%= @idea.title %></h1>
	<p>Created by <%= link_to @idea.user.email, user_path(@idea.user.id) %> <%= time_ago_in_words(@idea.created_at) %> ago.</p>
	<% if user_signed_in? %>
			<% if @idea.user_id == current_user.id or current_user.try(:admin?)%>
				<%= link_to "Edit", edit_idea_path(@idea), class: "btn btn-default" %>
				<%= link_to "Delete", idea_path(@idea), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
	<% end %>
	<hr>
	<div class="col-md-4">
		<%= image_tag @idea.idea_image.url(:idea_show) %>
	</div>
	<div class="col-md-8">
		<h3> Description:</h3>
		<p><%= @idea.description %></p>
		<h5>Category: <%= @idea.category.name %></h5>
		<h5>Estimated release date: <%= @idea.estimated_date %></h5>
		<h5>Goal amount: $<%= @idea.goal_amount %></h5>
	<hr>
	<h3> Funding: </h3>
	<label for="cost1">How much do you want to fund?</label>
	<input type="cost" class="form-control" id="cost1" aria-describedby="emailHelp" placeholder="Enter amount"><a class="btn btn-primary m-1"  role="button">Fund this project!</a>
	<hr>
	<h3> Promises: </h3>
	<%= image_tag('images.jpeg' , width: '150px')%>
	<hr>
	</div>
	
	<h3>Comments:</h3>
	<% if @idea.messages.count == 0 %>
	<h4> Be the first to comment this Idea! </h4>
	<% end %>
	<%= render @idea.messages %>
	<hr>
	<%= render 'messages/form' %>

</div>
