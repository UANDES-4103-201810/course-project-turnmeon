<h1> Ideas </h1>
<% if params[:category] != nil %>
	<h4 class="current-category"> Category: <%= params[:category] %></h4>
<% end %>
<hr>

<% if @ideas.count == 0 %>
	<h2> Sorry, there are not ideas to show </h2>
<% else %>
	<div class="row">
		<% @ideas.each do |idea| %>
			<div class="col-md-4">
					<% if idea.try(:outstanding?)%>
						<h2>â˜… <%= link_to idea.title, idea_path(idea) %></h2>
					<% else %>
						<h3> <%= link_to idea.title, idea_path(idea) %></h3>
					<% end %>
					<a href="/ideas/<%= idea.id %>">
						<%= image_tag idea.idea_image.url(:idea_index)%>
					</a>
					<p>Created by <%= link_to idea.user.email, user_path(idea.user.id) %> <%= time_ago_in_words(idea.created_at) %> ago.</p>



					<%#= link_to "View Idea", idea_path(idea), class: "btn btn-default" %>
					<% if user_signed_in? %>
						<%= link_to favourite_idea_path(idea), class: favourite_idea(idea) do %>
							<i class="glyphicon glyphicon-heart btn-group-lg"></i>
						<% end %>						
						<% if idea.user_id == current_user.id or current_user.try(:admin?)%>
							<%= link_to "Edit", edit_idea_path(idea), class: "btn btn-default" %>
							<%= link_to "Delete", idea_path(idea), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %>
						<% end %>
					<% end %>
			</div>
		<% end %>
	</div>
<% end %>







